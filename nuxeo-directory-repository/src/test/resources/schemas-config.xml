<?xml version="1.0"?>
<component name="org.nuxeo.ecm.directory.repository.schemas">

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="schema1" prefix="sch1" src="schema/schema1.xsd" />
    <schema name="user" prefix="usr" src="schema/user.xsd" />
    <schema name="group" src="schema/group.xsd" />
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
    <doctype name="RepoDirDoc" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="uid" />
      <schema name="schema1" />
      <facet name="Versionable" />
      <prefetch>dc:title, dc:modified, uid.uid</prefetch>
    </doctype>
    
    <doctype name="OtherDirDoc" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="uid" />
      <schema name="group" />
      <facet name="Versionable" />
      <prefetch>dc:title, dc:modified, uid.uid</prefetch>
    </doctype>
  </extension>


</component>
